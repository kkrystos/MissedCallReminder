<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <RingtonePreference
    android:key="ring_tone_preff"
    android:title="Dzwięk powiadomienia"
    android:ringtoneType="notification"
    android:summary="Ustaw dzwięk powiadomienia" />
    <ListPreference
    android:key="led_preff"
    android:title="LED kolor"
    android:summary="Ustaw kolor LED powiadomienia"
    android:entries="@array/led"
    android:entryValues="@array/eled"
    android:defaultValue="0" />
    <CheckBoxPreference 
    android:key="check_vibrate_preff"
    android:title="Wibracje"
    android:defaultValue="true"
    android:summary="Wł./wył. wibracje" />
    <CheckBoxPreference 
    android:key="check_screen_on_preff"
    android:title="Rozjaśnij ekran"
    android:defaultValue="false"
    android:summary="Ustaw rozjaśnianie ekranu" />
    

</PreferenceScreen>